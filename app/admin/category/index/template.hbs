<div class="container">
  <h1 class="menu_title">Categories</h1>
  <div class="card">

        <div class="add__new">
          {{#link-to "admin.category.new" class="add__new-btn"}} Add New {{/link-to}}

      </div>

    <div class="menu-item">
      <table>
        <thead>
          <th class="table__name">Name</th>
          <th></th>
        </thead>
        {{#each model as |category|}}

          <tr>
            <td> {{ category.name }} </td>
            <td> {{#link-to "admin.category.detail" category.id}} Detail {{/link-to}}</td>
          </tr>

        {{/each}}
      </table>
    </div>
  </div>
</div>
