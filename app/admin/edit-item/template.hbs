<div class="container">
  {{#simple-form onsubmit=(action "saveForm") startingValues=model class="add__new-form" as | formValues |}}

    <div class="form-header"> Edit {{model.name}}</div>
    <div class="form__container">

      <div class="input__field"> Name
        {{input placeholder="Name" class="input__field-name" value=formValues.name}}
      </div>

      <div class="input-field">
        <label for="" class="input-field__title">Price</label>
        <div class="input-addon">
          <span class="input-addon__item">$</span>
          {{input placeholder="Price" class="input-addon__control" value=formValues.price}}
        </div>
      </div>

      <div class="input__field"> Description
        {{input placeholder="Description" class="input__field-name" value=formValues.description}}
      </div>

    </div>

    <div class="btn__flex">
      {{#link-to "admin.category" class="btn__flex-btn" }} Back {{/link-to}}
      <button class="btn__flex-btn">Submit</button>
    </div>
{{/simple-form}}
</div>
